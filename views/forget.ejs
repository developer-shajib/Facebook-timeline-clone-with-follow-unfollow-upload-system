<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="shortcut icon"
      href="./assets/icons/favicon.ico"
      type="image/x-icon"
    />
    <title>Facebook – log in or sign up</title>

    <link rel="stylesheet" href="./assets/css/style.css" />
  </head>
  <body>
    <!-- Facebook Auth Area -->
    <div class="reset-header">
      <div class="reset-header-wraper">
        <div class="reset-logo">
          <img src="./assets/icons/facebook.svg" alt="" />
        </div>
        <form action="/login" method="post">
          <div class="login-part">
            <input name="email" type="text" placeholder="Email" />
            <input name="password" type="text" placeholder="Password" />
            <button>Log In</button>
            <a href="/forget">Forgotten account?</a>
          </div>
        </form>
      </div>
    </div>

    <!-- reset Box  -->
    <div class="reset-area">
      <div class="reset-wraper">
        <div class="reset-box">
          <div class="reset-box-header">
            <span class="title">Find Your Account</span>
          </div>
          <div class="reset-body">
            <p>
              Please enter your email address or mobile number to search for
              your account.
            </p>
          <form action="/forgetEmailSend" method="post">
            <div class="code-box">
              <input
                class="w-100"
                type="text" name="email"
                placeholder="Email address or mobile number"
                <% if (forgetEmail) { %>
                 value = '<%= forgetEmail %>'
                <% } %>
              />
            </div>
          
          </div>
          <div class="reset-footer">
            <a href="#"></a>
            <div class="reset-btns">
              <a class="cancel" href="/index">Cancel</a>
              <button class="getForgetEmail" type="submit">Send</button>
              <!-- <a class="continue" href="#" type="submit">Send</a> -->
            </div>
          </div>
        </form>
        </div>
      </div>
    </div>

    <!-- FB FOOTER AREA  -->
    <div class="fb-footer">
      <div class="footer-wraper">
